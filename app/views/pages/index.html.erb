<div ng-app="app">
  {{ 1 + 1 }}

  <div ng-controller="stuffCtrl">
  
  <div></div>

  
    <div>
    <h2>To-Do List</h2>
      <ul>
        <li ng-repeat="task in tasks" ng-show="task" ng-click="">
         {{ task }}
          <input ng-model="task">
         </li>  
      </ul>
      <input ng-model="newTask">
      <button ng-click="addTask(newTask)">Add Task</button>
    </div>
  </div>
</div>